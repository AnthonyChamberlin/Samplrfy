<div class="row full_review_row">
  <div class="col-xs-1">
  <%= link_to image_tag review.user.image, class: "audio_panel_profile_image" %>
  </div>
  <div class="col-xs-11">
    <div class="row">
      <div class="col-xs-3">
        <strong><h5><%= review.user.username %></h5></strong>
      </div>
      <div class="col-xs-3">
        <h5 class="review_time_ago"><%= "#{time_ago_in_words(review.created_at).gsub('about ','')} ago" %></h5>
      </div>
      <% if user_signed_in? %>
        <% if review.user_id == current_user.id %>
            <div class="col-xs-3">
              <h6><%= link_to "Edit", edit_track_review_path(review.track, review), class: "btn edit_review_btn" %></h6>
            </div>
            <div class="col-xs-3">
                <h6><%= link_to "Delete", track_review_path(review.track, review), method: :delete, data: { confirm: "Are you sure you want to delete this comment?"}, class: "btn remove_review_btn" %></h6>
            </div>
        <% end %>
      <% end %>
    </div>
    <div class="row">
      <div class="col-xs-3">
        <div class="review-rating" data-score="<%= review.rating %>"></div>
      </div>
      <div class="col-xs-9 review_comment_text">
          <h5><%= review.comment %></h5>
      </div>
    </div>
  </div>
</div>
