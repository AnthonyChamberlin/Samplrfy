
<div class="col-md-10 col-md-offset-1 login_panel join_panel">
<h2 class="text-center">Join</h2>
<h4 class="text-center">Be a part of Samplrfy. It's Free.</h4>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="row">
      <div class="col-xs-6">
        <%= f.input :first_name %>
      </div>
      <div class="col-xs-6">
        <%= f.input :last_name %>
      </div>
    </div>
    <%= f.input :username, required: true, label: "Username (This will be your Artist name):" %>
    <%= f.input :email, required: true  %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
